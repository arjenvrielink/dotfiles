filetype plugin indent on    " required

" Common options
syntax enable
filetype plugin on
set incsearch
set number
set hlsearch
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent
set pastetoggle=<F2>
set wrap
set cc=80
set laststatus=2
set completeopt=menuone,longest,preview
" If you prefer the Omni-Completion tip window to close when a selection is
" made, these lines close it on movement in insert mode or when leaving
" insert mode
autocmd CursorMovedI * if pumvisible() == 0|pclose|endif
autocmd InsertLeave * if pumvisible() == 0|pclose|endif

" Colorscheme options
set background=dark
let g:solarized_termtrans=1
let g:solarized_termcolors=256
let g:solarized_contrast="high"
let g:solarized_visibility="high"
colorscheme solarized

" Filetype options
au FileType python set omnifunc=pythoncomplete#Complete
au FileType javascript set omnifunc=javascriptcomplete#CompleteJS sw=2 sts=2 et
au FileType html set sw=2 sts=2 et
au FileType css set omnifunc=csscomplete#CompleteCSS
au FileType xml set omnifunc=xmlcomplete#CompleteTags
au FileType php set omnifunc=phpcomplete#CompletePHP
au BufRead,BufNewFile *.json set filetype=json

" NERDTree options
nnoremap <F12> :NERDTreeToggle<CR>
let NERDTreeQuitOnOpen=1

" Tagbar options
let g:tagbar_usearrows = 1
nnoremap <leader>l :TagbarToggle<CR>
let g:tagbar_autofocus = 1
let g:tagbar_autoclose = 1

" Css color vim options
let g:cssColorVimDoNotMessMyUpdatetime = 1

" Flake 8 options
autocmd BufWritePost *.py call Flake8()
let g:flake8_ignore="E501,W293"

" Markdown
autocmd BufNewFile,BufRead *.md,*.mkdn,*.markdown :set filetype=markdown
" to HTML
nmap <leader>md :%!/usr/bin/markdown <CR>

" Python environment for buildout and virutalenv
let $PYTHONPATH .= ':/home/arjen/.buildout/eggs'
let $PYTHONPATH .= ':$VIRTUAL_ENV/lib/python2.7/site-packages'

" Powerline bindings
